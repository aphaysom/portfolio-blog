@page
@model PortainerBlog.Pages.Posts.CreateModel
@{
    ViewData["Title"] = "Create Post";
}

<h1>Create a New Post</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Post.Title" class="form-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Post.Content" class="form-label"></label>
                <textarea asp-for="Post.Content" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Publish</button>
                <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
